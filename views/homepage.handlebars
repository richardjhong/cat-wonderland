<section class="container">
  {{#if loggedIn}}
    {{#if gameHasStarted}}
      <p>Game turns: {{gameTurns}}</p>
    {{/if}}
    {{#unless gameHasStarted}}
    <button class="btn btn-primary" id="startGame">Start Game</button>
    {{/unless}}
    {{#each cards as |card|}}
      {{> card-details enableDrawCards=../maxCardsInHand enableDiscardCards=../oneCardHand}}
    {{/each}}
    
    {{#each cats as |cat|}}
      {{> cat-details}}
    {{/each}}
    {{#if gameHasStarted}}
      <button id="discard-button">Discard</button>
    {{/if}}  
  {{/if}}
</section>
